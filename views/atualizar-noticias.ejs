    <section class="message-container hidden" id="message-wrapper">
        <section class="icon-container">
            <img src="" id="icon-img">
        </section>
        <section class="status-container">
            <p id="status-msg"></p>
        </section>
        <section class="button-msg-container">
            <a href="#" rel="prev" target="_self" id="link-msg"></a>
        </section>
    </section>
    
    <main>
        <section class="wrapper" id="form-wrapper">
            <section class="title-container">
                <h1>Atualização de Notícias</h1>
                <h2>Seja bem vindo!</h2>
            </section>
            <section class="form-container">
                <form id="form" autocomplete="off">
                    <section class="title-form-container">
                        <section class="input-container">
                            <label for="title-input">Titulo:</label>
                            <input type="text" name="title" id="title-input" placeholder="Digite o título da notícia" required>
                        </section>
                    </section>

                    <section class="image-form-container">
                        <section class="input-container">
                            <label for="image-input">Imagem:</label>
                            <section class="flex-input-container">
                                <input type="text" name="image" id="image-input" placeholder="Digite o link da imagem da notícia" required>
                                <button id="image-check-btn" type="button"><i class="fa-solid fa-check"></i></button>
                            </section>
                        </section>
                    </section>

                    <section class="link-form-container">
                        <section class="input-container">
                            <label for="link-input">Link:</label>
                            <input type="text" name="link" id="link-input" placeholder="Digite o link da notícia">
                        </section>
                    </section>

                    <section class="date-form-container">
                        <h1>Data:</h1>
                        <section class="containers">
                            <section class="input-container day">
                                <section class="day-container">
                                    <label for="day-input">Dia:</label>
                                    <input type="text" name="day" id="day-input" placeholder="DD" required>
                                </section>
                            </section>
                            <section class="input-container month">
                                <section class="month-container">
                                    <label for="month-select">Mês</label>
                                    <select name="month" id="month-select">
                                        <option hidden selected disabled value="">SELECIONE</option>
                                        <option value="JANEIRO">JANEIRO</option>
                                        <option value="FEVEREIRO">FEVEREIRO</option>
                                        <option value="MARÇO">MARÇO</option>
                                        <option value="ABRIL">ABRIL</option>
                                        <option value="MAIO">MAIO</option>
                                        <option value="JUNHO">JUNHO</option>
                                        <option value="JULHO">JULHO</option>
                                        <option value="AGOSTO">AGOSTO</option>
                                        <option value="SETEMBRO">SETEMBRO</option>
                                        <option value="OUTUBRO">OUTUBRO</option>
                                        <option value="NOVEMBRO">NOVEMBRO</option>
                                        <option value="DEZEMBRO">DEZEMBRO</option>
                                    </select>
                                </section>
                            </section>
                            <section class="input-container year">
                                <section class="year-container">
                                    <label for="year-input">Ano:</label>
                                    <input type="text" name="year" id="year-input" placeholder="AAAA" required>
                                </section>
                            </section>
                        </section>
                    </section>

                    <section class="external-form-container">
                        <section class="input-container">
                            <label for="external-select">Fonte externa:</label>
                            <select name="external" id="external-select">
                                <option hidden selected disabled value="">SELECIONE</option>
                                <option value="y">SIM</option>
                                <option value="n">NÃO</option>
                            </select>
                        </section>
                    </section>

                    <section class="buttons-form-container">
                        <button type="submit" class="submit-btn">Atualizar</button>
                        <button type="reset" class="reset-btn">Limpar</button>
                    </section>
                </form>
            </section>
        </section>

        <section class="wrapper" id="preview-wrapper">
            <section class="preview-title-container">
                <h1>Pré visualização</h1>
            </section>
            <section class="news-container">
                <section class="image-news-container">
                    <img src="" id="image-preview">
                </section>
                <section class="info-news-container">
                    <section class="date-news-container">
                        <p id="date-preview"></p>
                    </section>
                    <section class="title-news-container">
                        <h1 id="title-preview"></h1>
                    </section>
                </section>
            </section>
        </section>
    </main>

